{
    "manifest_version": 3,
    "name": "Browser Remote",
    "description": "",
    "version": "0.1.0",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "host_permissions": ["<all_urls>"]
}
